.cu-item .driver {
  margin-top: 10rpx;
  margin-bottom: 10rpx;
}
.cu-item .driver .car-info .plate {
  margin-right: 30rpx;
}
.cu-item .driver .driver-info .name {
  margin-right: 30rpx;
}
.cu-item .avatar image {
  height: 75rpx;
  width: 75rpx;
  border-radius: 50%;
}
.cu-item .rating-area {
  margin: 0 auto;
}
.cu-item .rating-area .sign {
  margin-top: 30rpx;
  margin-bottom: 30rpx;
  color: #535886;
}
.cu-item .rating-area .rate-btn {
  margin-top: 20rpx;
  background-color: #535886;
  color: white;
  width: 200rpx;
  height: 80rpx;
}
.cancel-btn {
  position: fixed;
  bottom: 0;
  border-radius: 0;
  color: aliceblue;
  font-size: 40rpx;
  height: 110rpx;
  width: 100vw;
  background-color: #00ae9d;
}
