.userInfo .avatar image {
  height: 200rpx;
  width: 200rpx;
  border-radius: 50%;
  margin-top: 10vh;
 
}

.userInfo {
  background-image: url(https://ftp.bmp.ovh/imgs/2021/03/cff8b69972adf867.png);
  background-size: cover;
  height: 550rpx;
  display: flex;
  justify-content: center;
  padding-top: 40rpx;
  overflow: hidden;
  position: relative;
  flex-direction: column;
  align-items: center;
  color: #fff;
  font-weight: 300;
  text-shadow: 0 0 3px rgba(0, 0, 0, 0.3);
}

.userInfo text {
  opacity: 0.8;
}



.userInfo .gif-wave{
  position: absolute;
  width: 100%;
  bottom: 0;
  left: 0;
  z-index: 99;
  mix-blend-mode: screen;  
  height: 100rpx;   
}